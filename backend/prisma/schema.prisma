datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}


generator client {
  provider = "prisma-client-js"
}

model User {
  id        Int        @id @default(autoincrement())
  name      String?
  email     String     @unique
  password  String
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt

  files     FileUpload[]
}

model FileUpload {
  id           Int      @id @default(autoincrement())
  userId       Int
  originalName String
  storedName   String
  mimeType     String?
  size         Int?
  path         String
  uploadedAt   DateTime @default(now())

  // ✅ LÄGG TILL DESSA:
  excelPath    String?
  pdfPath      String?
  analysisData Json?

  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}
